{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 20",
    "compilerOptions": {
      "lib": [
        "es2020"
      ],
      "module": "commonjs",
      "target": "es2020",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
      "sourceMap": true,
      "baseUrl": "."
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }